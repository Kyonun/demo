# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  # Common to all VMs
  config.ssh.private_key_path= "~/vm/keys/vagrant"
  config.vm.box = "ubuntu-15.10-server-amd64"
  config.vm.synced_folder "~/vm/data", "/vagrant_data"
  config.vm.boot_timeout = 60

  # Loop for VM specific config
  VMCOUNT = 2
  (1..VMCOUNT).each do |vmNum|
    config.vm.define "vm#{vmNum}" do |node|
      node.vm.network "private_network", ip: "10.0.10.#{vmNum}", virtualbox__null: true
      node.vm.provider "virtualbox" do |vb|
        vb.name = "vm#{vmNum}"
      end
      node.vm.provision "ansible" do |ansible|
        ansible.verbose = "v"
        ansible.playbook = "ansible/playbook.yml"
        ansible.groups = {
          "nameservers" => ["vm1"],
          "dhcpservers" => ["vm2"]
        }
      end
    end
  end
end
