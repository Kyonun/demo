auto eth1
iface eth1 inet static
  address 10.0.0.1
  netmask 255.255.255.0
  post-up route add -net 192.168.0.0 netmask 255.255.0.0 gw 10.0.0.254
  post-up route add -net 172.16.0.0 netmask 255.240.0.0 gw 10.0.0.254
  post-up route add -net 10.0.0.0 netmask 255.0.0.0 gw 10.0.0.254
  post-up /sbin/iptables-restore -c < /etc/iptables.rules
